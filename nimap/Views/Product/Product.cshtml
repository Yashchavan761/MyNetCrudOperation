@model nimap.Context.Product

@{
    ViewBag.Title = "Product";

    
}
<style>
    .error{
        color:red;
    }
</style>

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
          
            <label>Product Id</label>
            @Html.ValidationMessageFor(x=>x.ProductId,"",new { @class="error"})
            @Html.TextBoxFor(x => x.ProductId, new { @class = "form-control" })

        </div>

    </div>
    <div class="container">
        <div class="form-group">
            <label>Product Name</label>
            @Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        </div>

    </div>
    <div class="container">
        <div class="form-group">
            <label>Category Id</label>
            @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
        </div>

    </div>
    <div class="container">
        <div class="form-group">
            <label>Category Name</label>
            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-primary">Clear</button>

        </div>
        
    </div>
}
